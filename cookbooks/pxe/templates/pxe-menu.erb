default menu.c32
timeout 1
menu title ########## PXE Boot Menu ##########
label 1
menu label Installing CentOS 7 for Openstack <%= @hostname.capitalize %>
kernel centos7_x64/images/pxeboot/vmlinuz
append initrd=centos7_x64/images/pxeboot/initrd.img method=http://<%= @pxe_ip %>/centos7_x64 devfs=nomount ks=http://<%= @pxe_ip %>/ks/<%= @mac_addr %>.ks
